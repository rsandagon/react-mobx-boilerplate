{
  "name": "reactjs-mobx-app",
  "version": "1.0.0-SNAPSHOT",
  "private": true,
  "description": "ReactJS MobX Boilerplate",
  "dockerRegistry": "",
  "dockerRepo": "",
  "main": "src/index.js",
  "scripts": {
    "compile": "npm run test && NODE_ENV=production webpack --progress --colors",
    "build": "npm run clean && npm run compile && npm run buildinfo",
    "build-bamboo": "npm run clean && npm run compile && npm run buildinfo",
    "clean": "rimraf dist",
    "test": "jest",
    "buildinfo": "echo { version: $npm_package_version, builddate: $(TZ=Asia/Taipei date -d 'now') } > ./dist/buildinfo.json",
    "start": "webpack-dev-server --history-api-fallback --hot --inline --progress --colors --port 3000 --host 0.0.0.0"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-core": "6.24.0",
    "babel-jest": "20.0.3",
    "babel-loader": "6.4.1",
    "babel-plugin-transform-class-properties": "6.23.0",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-es2015": "6.24.0",
    "babel-preset-react": "6.23.0",
    "css-loader": "0.26.4",
    "docker-cmd": "0.2.2",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.8.5",
    "html-webpack-plugin": "2.28.0",
    "enzyme": "2.8.2",
    "jest": "20.0.4",
    "jest-cli": "20.0.4",
    "json-loader": "0.5.4",
    "react-hot-loader": "1.3.1",
    "rimraf": "2.6.1",
    "style-loader": "0.13.2",
    "webpack": "1.14.0",
    "webpack-dev-server": "1.16.3",
    "webpack-hot-middleware": "2.17.1"
  },
  "dependencies": {
    "babel-runtime": "6.23.0",
    "es6-promise": "3.3.1",
    "isomorphic-fetch": "2.2.1",
    "jsonwebtoken": "7.1.9",
    "lodash": "4.17.4",
    "mobx": "3.1.10",
    "mobx-promise": "0.3.1",
    "mobx-react": "4.1.8",
    "mobx-react-router": "4.0.1",
    "react": "15.5.4",
    "react-dom": "15.5.4",
    "react-keydown": "1.7.4",
    "react-router": "4.1.1",
    "react-select": "1.0.0-rc.3",
    "react-test-renderer": "15.5.4",
    "socket.io-client": "^2.0.3",
    "socket.io-react": "^1.2.0",
    "whatwg-fetch": "2.0.1"
  },
  "jest": {
    "automock": false,
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    }
  }
}
